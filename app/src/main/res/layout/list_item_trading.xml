<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/iv_trading_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:id="@+id/tv_trading_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_trading_list_icon"
        android:layout_toRightOf="@+id/iv_trading_list_icon"
        android:layout_alignParentTop="true"
        android:textColor="@color/primaryTextColor"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_trading_list_subtitle_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_trading_list_icon"
        android:layout_toRightOf="@+id/iv_trading_list_icon"
        android:layout_below="@id/tv_trading_list_title"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_trading_list_subtitle_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_trading_list_icon"
        android:layout_toRightOf="@+id/iv_trading_list_icon"
        android:layout_below="@id/tv_trading_list_subtitle_one"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_trading_list_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/primaryTextColor"
        android:layout_margin="4dp"
        android:textSize="16sp"
        />

</RelativeLayout>